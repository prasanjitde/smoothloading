<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.prasanjit.smoothloadinglib.SmoothLoadingView
        android:id="@+id/btn_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="32dp"
        app:button_background="@android:color/darker_gray"
        app:button_loading_count="15"
        app:button_text="Smooth loading button"
        app:button_text_loading="It's loading..."
        app:button_text_color="@android:color/black" />

</RelativeLayout>